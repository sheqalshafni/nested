<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:id="@+id/parent_layout"
    android:background="@color/mediumGray">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="-62dp">

        <View
            android:id="@+id/view"
            android:layout_width="600dp"
            android:layout_height="200dp"
            android:background="@drawable/upperbg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view3"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bgmenus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/btnListing"
                android:layout_width="106dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_listing"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/btnRental"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btnRental"
                android:layout_width="106dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_receipt"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toStartOf="@+id/btnPaymentRecords"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnListing"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btnPaymentRecords"
                android:layout_width="106dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_history"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnRental"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:text="Listings"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnListing" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:text="Rental"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/btnListing" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:text="History"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/btnPaymentRecords" />

        </android.support.constraint.ConstraintLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            >

            <TextView
                android:id="@+id/txtServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"/>


            <View
                android:id="@+id/mark1"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txtServices"/>

            <View
                android:id="@+id/btnRoomList"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_below="@+id/txtServices"
                android:layout_centerHorizontal="true"
                android:background="@drawable/menubg"
                android:layout_marginTop="20dp"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgRoom"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_below="@+id/txtServices"
                android:layout_centerHorizontal="true"
                app:riv_corner_radius="12dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mark1"
                android:text="Find Room"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"/>

            <View
                android:id="@+id/mark2"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/btnRoomList"/>

            <View
                android:id="@+id/btnRoommateList"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_below="@+id/btnRoomList"
                android:layout_centerHorizontal="true"
                android:background="@drawable/menubg"
                android:layout_marginTop="20dp"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgRoommate"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                app:riv_corner_radius="12dp"
                android:layout_below="@+id/btnRoomList"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mark2"
                android:text="Find Roommate"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"/>

            <View
                android:id="@+id/mark3"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/btnRoommateList"/>

            <View
                android:id="@+id/btnUnitList"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_below="@+id/btnRoommateList"
                android:layout_centerHorizontal="true"
                android:background="@drawable/menubg"
                android:layout_marginTop="20dp"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgUnit"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:layout_below="@+id/btnRoommateList"
                app:riv_corner_radius="12dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mark3"
                android:text="Find Unit"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtGreetings"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Greetings"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/txtCurrentTime"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="TextView"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGreetings" />

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/circle_ui"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.962"
            app:layout_constraintStart_toEndOf="@+id/txtGreetings"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/account_circle" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>